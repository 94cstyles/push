{
  "apps": [
    {
      "name": "heikuai",
      "script": "index.js",
      "watch": true,
      "env": {
        "NODE_ENV": "development"
      },
      "instances": "max",
      "exec_mode": "cluster_mode",
      "node_args": [
        "--nouse-idle-notification",
        "--max-old-space-size=4096"
      ],
      "error_file": "logs/err.log"
    }
  ]
}
